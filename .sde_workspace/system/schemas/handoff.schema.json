{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/sde/handoff.schema.json",
  "title": "StructuredHandoff",
  "type": "object",
  "required": ["meta", "context_core", "decisions", "artifacts_produced", "knowledge_references", "next_phase_objectives", "acceptance_criteria_next_phase", "checklists_completed", "quality_signals", "agents_progress"],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["handoff_id", "timestamp_utc", "from_agent", "to_agent", "phase_current", "phase_next", "version"],
      "additionalProperties": false,
      "properties": {
        "handoff_id": { "type": "string", "pattern": "^handoff-.*" },
        "timestamp_utc": { "type": "string", "format": "date-time" },
        "from_agent": { "type": "string", "enum": ["architect", "developer", "qa", "reviewer", "pm", "documentation", "devops"] },
        "to_agent": { "type": "string", "enum": ["architect", "developer", "qa", "reviewer", "pm", "documentation", "devops"] },
        "phase_current": { "type": "string", "enum": ["INITIALIZING", "DESIGN", "IMPLEMENTATION", "QA_REVIEW", "TECH_REVIEW", "PM_VALIDATION", "ARCHIVED"] },
        "phase_next": { "type": "string", "enum": ["INITIALIZING", "DESIGN", "IMPLEMENTATION", "QA_REVIEW", "TECH_REVIEW", "PM_VALIDATION", "ARCHIVED"] },
        "previous_handoff_id": { "type": ["string", "null"] },
        "workspace_id": { "type": ["string", "null"] },
        "version": { "type": "integer", "minimum": 1 }
      }
    },
    "context_core": {
      "type": "object",
      "required": ["business_goal", "scope_included", "scope_excluded", "non_functional_priorities"],
      "additionalProperties": false,
      "properties": {
        "business_goal": { "type": "string", "minLength": 3 },
        "scope_included": { "type": "array", "items": { "type": "string" } },
        "scope_excluded": { "type": "array", "items": { "type": "string" } },
        "non_functional_priorities": { "type": "array", "items": { "type": "string" } }
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "status", "rationale", "changed_in_this_phase"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
            "status": { "type": "string", "enum": ["approved", "rejected", "pending", "superseded"] },
            "rationale": { "type": "string" },
            "implications": { "type": "array", "items": { "type": "string" } },
            "references": { "type": "array", "items": { "type": "string" } },
            "changed_in_this_phase": { "type": "boolean" }
        }
      }
    },
    "artifacts_produced": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "hash", "type"],
        "additionalProperties": false,
        "properties": {
          "path": { "type": "string" },
          "hash": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" },
          "type": { "type": "string" },
          "purpose": { "type": "string" }
        }
      }
    },
    "pending_items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "blocking"],
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "blocking": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "mitigation": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "knowledge_references": {
      "type": "object",
      "required": ["internal", "external", "gaps"],
      "properties": {
        "internal": { "type": "array", "items": { "type": "string" } },
        "external": { "type": "array", "items": { "type": "string" } },
        "gaps": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "delta_summary": {
      "type": ["object", "null"],
      "properties": {
        "since_previous_handoff": {
          "type": "object",
          "required": ["decisions_added", "decisions_updated", "artifacts_new", "artifacts_modified"],
          "properties": {
            "decisions_added": { "type": "integer", "minimum": 0 },
            "decisions_updated": { "type": "integer", "minimum": 0 },
            "artifacts_new": { "type": "integer", "minimum": 0 },
            "artifacts_modified": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        },
        "reason": { "type": ["string", "null"] }
      },
      "additionalProperties": false
    },
    "next_phase_objectives": { "type": "array", "items": { "type": "string" } },
    "acceptance_criteria_next_phase": { "type": "array", "items": { "type": "string" } },
    "checklists_completed": { "type": "array", "items": { "type": "string" } },
    "quality_signals": {
      "type": "object",
      "required": ["context_completeness_score", "artifact_hash_mismatch", "open_questions", "clarification_requests"],
      "properties": {
        "context_completeness_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "artifact_hash_mismatch": { "type": "boolean" },
        "open_questions": { "type": "integer", "minimum": 0 },
        "clarification_requests": { "type": "integer", "minimum": 0 },
        "knowledge_priority_violations": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "agents_progress": {
      "type": "object",
      "patternProperties": {
        "^(architect|developer|qa|reviewer|pm|documentation|devops)$": {
          "type": "object",
          "properties": {
            "completed": { "type": "boolean" },
            "artifact": { "type": ["string", "null"] }
          },
          "required": ["completed"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "message"],
        "properties": {
          "type": { "type": "string", "enum": ["info", "warning", "error"] },
          "message": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "allOf": [
    {
      "if": { "properties": { "meta": { "properties": { "version": { "const": 1 } } } } },
      "then": { "properties": { "delta_summary": { "const": null } } }
    },
    {
      "if": { "properties": { "meta": { "properties": { "version": { "minimum": 2 } } } } },
      "then": { "required": ["delta_summary"] }
    }
  ]
}
