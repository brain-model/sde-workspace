{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/sde/knowledge_manifest.schema.json",
  "title": "KnowledgeManifest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "description": "Versão do manifesto de conhecimento",
      "pattern": "^$|^v?[0-9]+(\\.[0-9]+){0,2}(-[0-9A-Za-z.-]+)?$"
    },
    "generatedAt": {
      "type": "string",
      "description": "Timestamp UTC da geração do manifesto",
      "oneOf": [
        { "format": "date-time" },
        { "maxLength": 0 }
      ]
    },
    "description": { "type": "string" },
    "repositories": {
      "type": "object",
      "description": "Catálogo dos repositórios de conhecimento",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "governance", "description"],
        "properties": {
          "type": { "type": "string" },
          "governance": { "type": "string" },
          "description": { "type": "string" },
          "path": { "type": "string" },
          "source": { "type": "string" }
        }
      }
    },
    "taxonomy": {
      "type": "object",
      "description": "Definição de taxonomia e governação",
      "additionalProperties": false,
      "required": ["governance", "categories", "tagSchema"],
      "properties": {
        "governance": { "type": "string" },
        "categories": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "tagSchema": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "object",
                "additionalProperties": true,
                "required": ["name"],
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "values": {
                    "type": "array",
                    "items": { "type": "string" },
                    "uniqueItems": true
                  }
                }
              }
            ]
          }
        }
      }
    },
    "files": {
      "type": "array",
      "description": "Lista de arquivos catalogados",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "checksum", "size", "lastModified", "metadata"],
        "properties": {
          "path": { "type": "string" },
          "checksum": { "type": "string" },
          "size": { "type": "integer", "minimum": 0 },
          "lastModified": {
            "type": "string",
            "oneOf": [
              { "format": "date-time" },
              { "maxLength": 0 }
            ]
          },
          "metadata": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "title", "category", "created", "updated", "source", "tags"],
            "properties": {
              "id": { "type": "string" },
              "title": { "type": "string" },
              "category": { "type": "string" },
              "created": {
                "type": "string",
                "oneOf": [
                  { "format": "date-time" },
                  { "maxLength": 0 }
                ]
              },
              "updated": {
                "type": "string",
                "oneOf": [
                  { "format": "date-time" },
                  { "maxLength": 0 }
                ]
              },
              "source": { "type": "string" },
              "tags": {
                "type": "array",
                "items": { "type": "string" },
                "uniqueItems": true
              }
            }
          }
        }
      }
    },
    "statistics": {
      "type": "object",
      "additionalProperties": false,
      "required": ["totalFiles", "byCategory", "byStatus", "totalSize"],
      "properties": {
        "totalFiles": { "type": "integer", "minimum": 0 },
        "byCategory": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          }
        },
        "byStatus": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          }
        },
        "totalSize": { "type": "integer", "minimum": 0 }
      }
    },
    "knowledge_index": {
      "type": "object",
      "additionalProperties": false,
      "required": ["artifacts", "gaps", "stats"],
      "properties": {
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "path",
              "type",
              "tags",
              "maturity",
              "hash",
              "size",
              "created_utc",
              "updated_utc",
              "created_by",
              "source_origin",
              "authoritative",
              "linked"
            ],
            "properties": {
              "path": { "type": "string" },
              "type": { "type": "string" },
              "tags": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1,
                "uniqueItems": true
              },
              "maturity": {
                "type": "string",
                "enum": ["draft", "review", "stable", "deprecated"]
              },
              "hash": {
                "type": "string",
                "pattern": "^sha256:[a-f0-9]{64}$"
              },
              "size": { "type": "integer", "minimum": 0 },
              "created_utc": {
                "type": "string",
                "format": "date-time"
              },
              "updated_utc": {
                "type": "string",
                "format": "date-time"
              },
              "created_by": {
                "type": "string",
                "enum": [
                  "architect",
                  "developer",
                  "qa",
                  "reviewer",
                  "pm",
                  "documentation",
                  "devops"
                ]
              },
              "source_origin": {
                "type": "string",
                "enum": ["internal", "external_curated", "external_raw"]
              },
              "authoritative": { "type": "boolean" },
              "linked": {
                "type": "object",
                "additionalProperties": false,
                "required": ["gaps", "decisions"],
                "properties": {
                  "gaps": {
                    "type": "array",
                    "items": { "type": "string" },
                    "uniqueItems": true
                  },
                  "decisions": {
                    "type": "array",
                    "items": { "type": "string" },
                    "uniqueItems": true
                  }
                }
              },
              "supersedes": {
                "oneOf": [
                  { "type": "string", "minLength": 1 },
                  { "type": "null" }
                ]
              },
              "superseded_by": {
                "oneOf": [
                  { "type": "string", "minLength": 1 },
                  { "type": "null" }
                ]
              },
              "archived_at": {
                "oneOf": [
                  { "type": "string", "format": "date-time" },
                  { "type": "null" }
                ]
              },
              "removed_at": {
                "oneOf": [
                  { "type": "string", "format": "date-time" },
                  { "type": "null" }
                ]
              }
            }
          }
        },
        "gaps": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "stats": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "internal",
            "external_curated",
            "external_raw",
            "maturity",
            "archived"
          ],
          "properties": {
            "internal": { "type": "integer", "minimum": 0 },
            "external_curated": { "type": "integer", "minimum": 0 },
            "external_raw": { "type": "integer", "minimum": 0 },
            "maturity": {
              "type": "object",
              "additionalProperties": false,
              "required": ["draft", "review", "stable", "deprecated"],
              "properties": {
                "draft": { "type": "integer", "minimum": 0 },
                "review": { "type": "integer", "minimum": 0 },
                "stable": { "type": "integer", "minimum": 0 },
                "deprecated": { "type": "integer", "minimum": 0 }
              }
            },
            "archived": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "index_latency_avg",
        "orphan_artifacts",
        "drift_incidents",
        "hash_mismatch_rate",
        "maturity_distribution",
        "scan_runs",
        "last_scan_utc"
      ],
      "properties": {
        "index_latency_avg": { "type": "number", "minimum": 0 },
        "orphan_artifacts": { "type": "integer", "minimum": 0 },
        "drift_incidents": { "type": "integer", "minimum": 0 },
        "hash_mismatch_rate": { "type": "number", "minimum": 0 },
        "maturity_distribution": {
          "type": "object",
          "additionalProperties": false,
          "required": ["draft", "review", "stable", "deprecated"],
          "properties": {
            "draft": { "type": "integer", "minimum": 0 },
            "review": { "type": "integer", "minimum": 0 },
            "stable": { "type": "integer", "minimum": 0 },
            "deprecated": { "type": "integer", "minimum": 0 }
          }
        },
        "scan_runs": { "type": "integer", "minimum": 0 },
        "last_scan_utc": {
          "type": "string",
          "oneOf": [
            { "format": "date-time" },
            { "maxLength": 0 }
          ]
        }
      }
    }
  },
  "required": [
    "version",
    "generatedAt",
    "description",
    "repositories",
    "taxonomy",
    "files",
    "statistics",
    "knowledge_index",
    "metrics"
  ]
}
